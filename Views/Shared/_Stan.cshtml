@model IEnumerable<aes.Models.Stan>

<table class="table" id="_StanTable">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.StanId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SifraObjekta)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Adresa)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Kat)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BrojSTana)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Naselje)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Četvrt)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Površina)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StatusKorištenja)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Korisnik)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Vlasništvo)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.StanId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SifraObjekta)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Adresa)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Kat)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BrojSTana)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Naselje)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Četvrt)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Površina)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StatusKorištenja)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Korisnik)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Vlasništvo)
            </td>
            <td>
                <button class="btn btn-outline-dark" onclick="getValuesStan(@item.Id, @item.StanId)">dodaj omm</button>
                <script>
                        function getValuesStan(id,stanid) {
                            $('#SId').val(id);
                            $('#StanId').val(stanid);
                        }
                </script>
            </td>
        </tr>
}
    </tbody>
</table>
<script>
    $(document).ready(function () {
        $('#_StanTable').DataTable({
            "order": [[2, 'asc']],
            "bLengthChange": false
        });
    });
</script>
