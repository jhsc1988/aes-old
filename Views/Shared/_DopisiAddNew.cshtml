<div class="row side-padding-10">
    <div class="col-md-6">
        <form class="row g-3 d-flex justify-content-start">
            <div class="col-md-4">
                <label hidden class="control-label"></label>
                <input id="dopis" class="form-control form-control-sm" placeholder="URBROJ" />
            </div>
            <div class="col-md-2">
                <label hidden class="form-label col-form-label-sm">Datum dopisa</label>
                <input type="text" id="datumIzvrsenja" class="form-control form-control-sm" placeholder="Datum dopisa"
                       onfocus="(this.type='date')" onblur="(this.type='text')">
            </div>
            <div class="col-md-2">
                <button type="submit" value="Spremi" class="dt-button" id="btnSave">Spremi</button>
            </div>
        </form>
    </div>
</div>

<script>
    $("#btnSave").on("click", function () {
        $.ajax({
            type: "POST",
            url: "/Dopisi/SaveToDB",
            data: {
                klasa: $("dopis").val(),
            },
            success: function (r) {
                if (r.success) {
                    alertify.success(r.message);
                } else {
                    alertify.error(r.message);
                }
                table.ajax.reload(null, false); // user paging is not reset on reload(callback, resetPaging)
            },
            error: function (r) {
                alertify.error(r.message);
                table.ajax.reload(null, false);
            }
        });
    })
</script>