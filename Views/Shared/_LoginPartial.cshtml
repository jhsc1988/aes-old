@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager

<ul class="navbar-nav">
@if (SignInManager.IsSignedIn(User))
{
    <li class="nav-item">
        <a class="nav-link text-dark h6" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Pozdrav @User.Identity?.Name</a>
    </li>
    <li class="nav-item">
        <a class="nav-link text-dark h6" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Stanovi", new { area = "" })">
            <i class="bi bi-box-arrow-in-left"></i>Izlaz
        </a>
    </li>
}
else
{
    <li class="nav-item">
        <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Register">Register</a>
    </li>
    <li class="nav-item">
        <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Login">Login</a>
    </li>
}
</ul>
