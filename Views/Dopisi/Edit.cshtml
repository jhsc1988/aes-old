@model aes.Models.Dopis

@{
    ViewData["Title"] = "Edit";
}

<div class="content-bg">
    <div class="row head-bg justify-content-between">
        <p class="h6" style="font-size: 0.8rem;">Klasa: @Model.Predmet.Klasa URBROJ: @Model.Urbroj</p>
    </div>
    <form asp-action="Edit">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="Id" />

        @* atributi su potrebni za bind - ne trbam ih vidljive, samo da povuće i zapiše podatke *@
        @* ------------------------------------------------------------------------------------ *@
        <div hidden style="display: none;">
            <div class="form-group">
                <label asp-for="PredmetId" class="control-label"></label>
                <select asp-for="PredmetId" class="form-control" asp-items="ViewBag.PredmetId"></select>
                <span asp-validation-for="PredmetId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="VrijemeUnosa" class="control-label"></label>
                <input asp-for="VrijemeUnosa" class="form-control" />
                <span asp-validation-for="VrijemeUnosa" class="text-danger"></span>
            </div>
        </div>
        @* ------------------------------------------------------------------------------------ *@

        <div class="row space-10-10">
            <div class="col-md-3">
                <div class="form-group">
                    URbroj
                    <input asp-for="Urbroj" class="form-control form-control-sm" />
                    <span asp-validation-for="Urbroj" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-2">
                <div class="form-group">
                    Datum dopisa
                    <input asp-for="Datum" class="form-control form-control-sm" />
                    <span asp-validation-for="Datum" class="text-danger"></span>
                </div>
            </div>
            <div class="row justify-content-start align-items-center padding-30">
                <button type="submit" class="dt-button"> Spremi</button>
            </div>
        </div>
    </form>
    <hr />
    <div>
        <button onclick="location.href='@Url.Action("Details", "Predmeti", new { Id = Model.PredmetId})'" type='button' class='button-back' id='remove'><i class='bi bi-arrow-left'></i>  povratak</button>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
