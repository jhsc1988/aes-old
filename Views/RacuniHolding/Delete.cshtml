@using aes.Models.Racuni;
@using aes.Models.Racuni.Holding;

@model RacunHolding

@{
    ViewData["Title"] = "Delete";
}
<div class="content-bg">
    <div class="row head-bg justify-content-between">
        <p class="pf08"><strong>Detalji:</strong> Račun broj: @Model.BrojRacuna</p>
    </div>
    <div>
        <strong> ID: </strong>
        <a href="/Stanovi/Details/@Model.Stan.Id">@Model.Stan.StanId</a>
        <strong> Adresa: </strong> @Model.Stan.Adresa
        <strong> Kat: </strong> @Model.Stan.Kat
        <strong> Broj stana: </strong>@Model.Stan.BrojSTana
        <strong> Četvrt: </strong>@Model.Stan.Četvrt
        <strong> Površina: </strong>@Model.Stan.Površina.Value.ToString("N2", System.Globalization.CultureInfo.GetCultureInfo("hr-HR")) m2
        <strong> Status korištenja: </strong>@Model.Stan.StatusKorištenja
        <strong> Vlasništvo: </strong> @Model.Stan.Vlasništvo
    </div><hr />
    <h4>Jeste li sigurni da želite obrisati ovaj račun ?</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.BrojRacuna)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.BrojRacuna)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Stan)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Stan.Adresa)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DatumIzdavanja)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DatumIzdavanja)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Iznos)
        </dt>
        <dd class="col-sm-10">
            @Html.Raw(Model.Iznos.ToString("C2", System.Globalization.CultureInfo.GetCultureInfo("hr-HR")))
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Dopis.Predmet)
        </dt>
        <dd class="col-sm-10">
            <a href="/Predmeti/Details/@Model.Dopis.PredmetId">@Html.DisplayFor(model => model.Dopis.Predmet.Klasa)</a>
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Dopis)
        </dt>
        <dd class="col-sm-10">
            <a href="/Dopisi/Details/@Model.DopisId">@Html.DisplayFor(model => model.Dopis.Urbroj)</a>
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.RedniBroj)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.RedniBroj)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.KlasaPlacanja)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.KlasaPlacanja)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DatumPotvrde)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DatumPotvrde)
        </dd>
    </dl>
    <hr />
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <button onclick="location.href='@Url.Action("Details", "RacuniHolding", new { id = Model.Id })'" type='button' class='button-back'><i class='bi bi-arrow-left'></i>  povratak na detalje</button>
        <input type="submit" value="Briši" class="btn btn-danger" />
    </form>
</div>
