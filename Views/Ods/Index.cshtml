@model IEnumerable<aes.Models.Ods>

@{
    ViewData["Title"] = "Index";
}

<h4>HEP - ODS - obračunska mjerna mjesta</h4>

<hr />
<p>
    <a asp-action="Create">Dodaj novo</a>
</p>
<hr />
<table class="table" id="OdsTable">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Stan.StanId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Stan)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Omm)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Napomena)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.VrijemeUnosa)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Stan.StanId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Stan.Adresa)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Omm)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Napomena)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.VrijemeUnosa)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<script>
    $(document).ready(function () {
        $('#OdsTable').DataTable({
            "order": [[1, 'asc']],
            "bLengthChange": false
        });
    });
</script>