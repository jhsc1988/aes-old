    function getData() {
        $.each(JSON.parse('@Html.Raw(Json.Serialize(Model))'), function (key, value) {
            if ($('#ugovorniRacun').val() == value.elektraKupac.ugovorniRacun) {

                // get data
                data_stanId = value.elektraKupac.ods.stan.stanId;
                data_adresa = value.elektraKupac.ods.stan.adresa;
                data_kat = value.elektraKupac.ods.stan.kat;
