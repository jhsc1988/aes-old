                return false
            } else {

                // insert variables
                t.row.add([
                    0, // dummy variable
                    brojRacuna.value,
                    data_stanId,
                    data_adresa,
                    data_korisnik,
                    data_statuskoristenja,
                    data_vlasnistvo,
                    datumIzdavanja.value,
                    iznos.value,
                    "<td><button type='button' class='remove btn btn-secondary btn-sm'>briši</button ></td >"
                ]).draw(false);

