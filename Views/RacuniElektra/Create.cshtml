                data_stanId = "";
                data_adresa = "";
                data_kat = "";
                data_brojstana = "";
                data_cetvrt = "";
                data_povrsina = "";
                data_statuskoristenja = "";
                data_korisnik = "";
                data_vlasnistvo = "";
            }
        });

        // numbering
        t.on('order.dt search.dt', function () {
            t.column(0, { search: 'applied', order: 'applied' }).nodes().each(function (cell, i) {
                cell.innerHTML = i + 1;
            });
        }).draw();

        // remove
        $('#indexTable').on('click', '.remove', function () {
            var table = $('#indexTable').DataTable();
                table
                    .row($(this).parents('tr'))
                    .remove()
                    .draw();
