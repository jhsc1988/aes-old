                data_statuskoristenja = value.elektraKupac.ods.stan.statusKori\u0161tenja;
                data_korisnik = value.elektraKupac.ods.stan.korisnik;
                data_vlasnistvo = value.elektraKupac.ods.stan.vlasni\u0161tvo;

