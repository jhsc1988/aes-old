<script src="~/js/Stanovi/Details/RacunElektraRateTable.js" asp-append-version="true"></script>
<script src="~/js/Stanovi/Details/RacunElektraTable.js" asp-append-version="true"></script>
<script src="~/js/Stanovi/Details/RacunHoldingTable.js" asp-append-version="true"></script>
