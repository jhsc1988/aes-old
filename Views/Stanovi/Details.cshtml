        filter = $('#RacunElektraRateTable_filter');
        setStyle(input, filter);

        input = $('#RacunHoldingTable_filter input[type="search"]');
        filter = $('#RacunHoldingTable_filter');
        setStyle(input, filter);

        input = $('#RacunOdsIzvrsenjaUslugeTable_filter input[type="search"]');
